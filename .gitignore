import math

def calculate_circle_properties():
    # Step 1: Input
    name = "Alex"  # Example customer name
    print(f"Hi {name}, let's calculate the area and circumference of a circle!")

    # Step 2: Gather radius input from user
    radius = float(input("Please enter the radius of the circle (positive number): "))

    # Step 3: Validate the input
    if radius <= 0:
        print("The radius must be a positive number. Please try again.")
        return

    # Step 4: Perform calculations
    area = math.pi * (radius ** 2)  # Area calculation: A = πr²
    circumference = 2 * math.pi * radius  # Circumference calculation: C = 2πr

    # Step 5: Output the results to the user
    print(f"The area of the circle with radius {radius} is {area:.2f}")
    print(f"The circumference of the circle with radius {radius} is {circumference:.2f}")

# Run the function
calculate_circle_properties()